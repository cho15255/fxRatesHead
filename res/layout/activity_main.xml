<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" >

            <TextView
                android:id="@+id/stripesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="Stripes" />

            <Button
                android:id="@+id/stripesButton"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/stripesText"
                android:background="@drawable/rounded_rectangle"
                android:textSize="12sp"
                android:text=" + Add Stripe \nHead" />
            
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" 
            />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" >
            
            <TextView
                android:id="@+id/triangleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:text="Triangles" />
            
            <Button
                android:id="@+id/triangleButton"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/triangleText"
                android:background="@drawable/rounded_rectangle"
                android:textSize="12sp"
                android:text=" + Add Triangle \nHead" />
            
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>